
<h1><%=@user.username%>'s page</h1>
<p>Username: <%= @user.username %></p>
<% if logged_in? %>
  <p>Email: <%= @user.email %></p>
<% end %>
<% if @user == current_user %>
  <p><a href="/users/<%= @user.slug %>/edit">Edit</a></p>
  <p><a href="/users/<%= @user.slug %>/delete">Delete</a></p>
<% end %>

<br></br>
<p><a href="/users/<%= @user.slug %>/recipes"> <%= @user.username %>'s Recipes<a/></p>
<p><a href="/recipes">All recipes</a></p>
<p><a href="/">Home</a></p>
<% if !logged_in? %>
  <p><a href="/login">Log In</a></p>
<% else %>
  <p><a href="/logout">Log Out</a></p>
<% end %>
